<tr id="<%= user.id %>">
  <th scope="row"><%= user.id %></th>
  <td><%= link_to user.first_name, user_path(user) %></td>
  <td><%= user.last_name %></td>
  <td><%= user.email %></td>
  <td>
    <% if is_user_current_user(user) %>
      <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </td>
</tr>