<tr>
  <th scope="row"><%= product.id %></th>
  <td><%= link_to product.name, product_path(product) %></td>
  <td><%= product.quantity %></td>
  <td><%= number_to_currency product.price %></td>
  <% if is_user_id_current_user(product) %>
    <td>
      <%= link_to 'Draft', product_status_path(product, status: 'draft'), method: :patch %> | 
      <%= link_to 'Published', product_status_path(product, status: 'published'), method: :patch %> | 
      <%= link_to 'Archive', product_status_path(product, status: 'archived'), method: :patch %> | 
      <%= link_to 'Edit', edit_product_path(product) %> |
      <%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  <% end %>
</tr>
